<form id="new-link">
  <label>URL:
    <input id="link-url">
  </label>
  <label>Title:
    <input id="link-title">
  </label>
  <input type="submit" value="Add Link">
</form>

<div id="links-list">
  <% @user_links.each do |link| %>
    <div class='link' data-id='<%= link.id %>' data-url='<%= link.url %>' id="link-<%= link.id %>">
      <p class='link-title'> <%= link.title %> </p>
      <p class='link-url'> <%= link.url %> </p>

      <p class="link_read">
        <%= link.read %>
      </p>
      <p class="link_buttons">
        <button class="mark-read">Mark as Read</button>
        <button id="<%= link.id %>" class='edit-link'>Edit</button>
        <button class='delete-link'>Delete</button>
      </p>
    </div>
  <% end %>
</div>

<h2>Hot Reads!</h2>
<ol id="hot-reads">
<% @hot_links.each do |read| %>
  <li class='hot-read'>
    <a href="<%= read.url %>"><%= read.url %></a>
  </li>
<% end %>
</ol>
<img src="https://m.popkey.co/4c7272/QL6mJ.gif">
<div id='user-data' data-id="<%= current_user.id %>"></div>
