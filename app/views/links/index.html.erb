<form id="new-link">
  <label>URL:
    <input id="link-url">
  </label>
  <label>Title:
    <input id="link-title">
  </label>
  <input type="submit" value="Add Link">
</form>

<div id="links-list">
  <% @user_links.each do |link| %>
    <div class='link <%= link.read %>' data-id='<%= link.id %>' data-url='<%= link.url %>' id="link-<%= link.id %>">
      <p class='link-title'> <%= link.title %> </p>
      <p class='link-url'> <%= link.url %> </p>

      <p class="link-read">
        <%= link.read %>
      </p>
      <p class="link_buttons">
        <button class="mark-read">Mark as Read</button>
        <button class="mark-unread">Mark as Unread</button>
        <button id="<%= link.id %>" class='edit-link'>Edit</button>
        <button class='delete-link'>Delete</button>
      </p>
    </div>
  <% end %>
</div>
<div id='user-data' data-id="<%= current_user.id %>"></div>
